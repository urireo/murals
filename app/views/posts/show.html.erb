<p id="notice"><%= notice %></p>
<h1> Post</h1>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<!-- if this post has comments, it will display them -->
<% if @post.comments.present? %>
  <div id="comments">
    <h1>Comments:</h1>
  <!-- The `comments` method returns an array-like collection, so we can call `each` on it: -->
    <%= render @post.comments %>
  </div>
<% end %>

<div class="container">
  <h2> Add a Comment: </h2>
  <%= render :partial => "comments/form", locals: {comment: @post.comments.new} %>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
